FROM node:14

WORKDIR /opt/next

ARG NEXT_PUBLIC_DISCORD_URLS
ARG NODE_EXTRA_CA_CERTS
ENV NEXT_PUBLIC_DISCORD_URLS $NEXT_PUBLIC_DISCORD_URLS
ENV NODE_EXTRA_CA_CERTS $NODE_EXTRA_CA_CERTS

COPY package.json package-lock.json ./
RUN npm install
COPY . .

RUN npm run build

USER node
EXPOSE 3000
CMD ["npm", "start"]
